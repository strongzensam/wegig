<div class="col-md-2">
</div>
<h1><%= "Skills used" %></h1>
<h1><%=" for #{@work_experience.title}" %></h1>

<hr>

  <div id="tasks-list">
    <table class="table-striped">
    <tr>
      <th>Skill</th>
      <th>Description</th>
    </tr>
        <% @work_experience.skills.each do |skill| %>
          <tr>
            <td>
              <input type="checkbox" class="icheck"> 
              <span class="body"><strong><%= skill.name%></strong></span>

            </td>
            <td>
              <input type="checkbox" class="icheck"> 
              <span class="body"><%= skill.description %></span>
            </td>
            <td>
              <input type="checkbox" class="icheck"> 
              <span class="body">Click here to see other users with this skill</span>
            </td>
          </tr>
          <% end %>

        </table>
        <a href="/gig_skills/new?work_experience_id=<%=@work_experience.id%>" class="btn btn-default">Add new Skill to Work Experience</a>

  </div>
  
  <hr>

<h1><%= "Musicians who worked on" %></h1>
<h1><%=" #{@work_experience.title}" %></h1>

  <div id="tasks-list" >
  <% users_array = [] %>
    <table class="table-striped">
    <tr>
      <th>Musician</th>
      <th>Role for this Gig</th>
      <th>Bio</th>
    </tr>
        <% @work_experience.users.each do |user| %>
          <tr>
            <td>
              <input type="checkbox" class="icheck"> 
              <span class="body"><strong><%= link_to user.full_name, "/users/#{user.id}"%></strong></span>
            </td>
            <td>
              <input type="checkbox" class="icheck"> 
              <span class="body"><%= "#{user.user_work_experiences.find_by(user_id: "#{user.id}").role}"%><% users_array << user.id%></span>
            </td>
            <td>
              <input type="checkbox" class="icheck"> 
              <span class="body"><%= user.short_bio%></span>
            </td>
          </tr>
          <% end %>
          <!-- <tr>
          <td>
          </td>
          </tr> -->
        </table>
        <br>
          <% if users_array[current_user.id - 1] == current_user.id || users_array.empty? %>
          <a href="/user_work_experiences/new?work_experience_id=<%=@work_experience.id%>" class="btn btn-default">Add new User to Work Experience</a>
          
           <% end %>

    </div>
    
     