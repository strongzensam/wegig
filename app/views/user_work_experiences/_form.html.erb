<%= form_for @user_work_experience do |f|%>
  <div>
    <ul>
      <% if @user_work_experience && @user_work_experience.errors.any? %>
        <% @user_work_experience.errors.full_messages.each do |message| %>
          <li class = "error"><%= message %></li>
        <% end %>
      <% end %>
  </ul>
</div>
<div class="form-group">
  <%= f.label :user %>
  <%= f.select(:user_id, @users.collect {|a| ["#{a.first_name + " " + a.last_name}", a.id]}) %></div> 
<div class="form-group">
  <%= f.label :role %>
  <%= f.text_field :role, class: "form-control"  %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control"  %>
</div>
  <%= f.hidden_field :work_experience_id, :value => params[:work_experience_id] %>
  <%= f.submit "Add User to Work Experience", class: "btn btn-default" %>
<% end %>